<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <stroke
                android:width="2sp"
                android:color="@color/border" />
        </shape>
    </item>
    <item
        android:bottom="2sp"
        android:top="2sp"
        android:left="2sp"
        android:right="2sp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/background" />
        </shape>
    </item>

</layer-list>